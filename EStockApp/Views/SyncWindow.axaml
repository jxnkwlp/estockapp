<Window
    x:Class="EStockApp.SyncWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="using:system"
    xmlns:vm="using:EStockApp.ViewModels"
    Title="同步"
    Width="600"
    Height="380"
    x:CompileBindings="True"
    x:DataType="vm:SyncWindowViewModel"
    CanResize="False"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:SyncWindowViewModel />
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="auto,*">
        <Grid>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock VerticalAlignment="Center">开始日期</TextBlock>
                <DatePicker
                    IsEnabled="{Binding !IsBusy}"
                    MaxYear="{Binding MaxYear}"
                    MonthFormat="MM"
                    SelectedDate="{Binding StartDate, Mode=TwoWay}" />
                <!--<CheckBox
                    VerticalAlignment="Center"
                    Content="从订单同步"
                    IsChecked="{Binding LoadFromOrder, Mode=TwoWay}"
                    IsEnabled="{Binding !IsBusy}" />-->
                <Button Command="{Binding StartCommand}" Theme="{DynamicResource SolidButton}">开始同步</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <ListBox
                AutoScrollToSelectedItem="False"
                ItemsSource="{Binding Logs}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <SelectableTextBlock
                            Margin="0"
                            Padding="0,0"
                            FontSize="12"
                            Text="{Binding .}"
                            TextWrapping="Wrap" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
    </Grid>
</Window>
